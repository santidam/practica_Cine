<Window x:Class="Practica01.ModificarUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Usuario" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Nombre:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="txtNombre" Text="{Binding nombre}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Email:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="txtEmail" Text="{Binding email}" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Label Content="Contraseña:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="txtPassword" Text="{Binding password}" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Button Content="Guardar Cambios" Grid.Row="3" Grid.ColumnSpan="2" 
                HorizontalAlignment="Center" Margin="10" Click="GuardarCambios_Click"/>
    </Grid>
</Window>
