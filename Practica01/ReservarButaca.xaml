        <Button Content="" HorizontalAlignment="Left" Margin="156,114,0,0" VerticalAlignment="Top" Height="40" Width="47" BorderBrush="{x:Null}" Click="Volver_Atras">
            <Button.Background>
                <ImageBrush ImageSource="/566095.png"/>
            </Button.Background>
        </Button>

