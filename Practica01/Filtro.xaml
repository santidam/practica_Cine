<Window x:Class="Practica01.Filtro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica01"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Género" FontWeight="Bold" FontSize="16"/>
            <UniformGrid Columns="4" Margin="0,10,0,10">
                <CheckBox Content="Acción" Name="accion" />
                <CheckBox Content="Comedia" Name="comedia" />
                <CheckBox Content="Suspenso" Name="suspenso" />
                <CheckBox Content="Aventura" Name="aventura" />
            </UniformGrid>

            <TextBlock Text="Idioma" FontWeight="Bold" FontSize="16"/>
            <UniformGrid Columns="4" Margin="0,10,0,20">
                <CheckBox Content="Español" Name="español" />
                <CheckBox Content="Inglés" Name="ingles" />
            </UniformGrid>

            <Button Content="Aplicar" HorizontalAlignment="Right" Click="AplicarFiltro" />
        </StackPanel>
    </Grid>
</Window>
