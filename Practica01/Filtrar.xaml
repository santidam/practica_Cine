<Window x:Class="Practica01.Filtrar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica01"
        mc:Ignorable="d"
        Title="Filtrar" Height="450" Width="800">
	<Grid>
		<StackPanel Margin="20">
			<TextBlock Text="Filtrar por título:" Margin="0,10,0,0"/>
			<TextBox x:Name="TitleFilterTextBox" Width="200" Margin="0,5,0,10"/>

			<TextBlock Text="Filtrar por género:" Margin="0,10,0,0"/>
			<ComboBox x:Name="GenreFilterComboBox" Width="200" Margin="0,5,0,10">
				<ComboBoxItem Content="Acción"/>
				<ComboBoxItem Content="Comedia"/>
				<ComboBoxItem Content="Drama"/>
			</ComboBox>

			<Button Content="Aplicar Filtro" Width="150" Margin="0,20,0,0" HorizontalAlignment="Center"
					Click="Filtrar_Click"/>
		</StackPanel>
	</Grid>
</Window>
